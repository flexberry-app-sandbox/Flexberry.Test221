<h3 class="ui header">{{t "forms.i-i-s-test22-ном-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номном
      class=(if (v-get validationModel "номном" "isInvalid") "error")
      label=(t "forms.i-i-s-test22-ном-e.номном-caption")
      data-test-i-i-s-test22-ном-e-номном=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номном" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-test22-ном-e.контр-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.контр
      relationName="контр"
      projection="контрL"
      title=(t "forms.i-i-s-test22-ном-e.контр-caption")
      readonly=readonly
      componentName="контрLookup"
      class=(if (v-get validationModel "контр" "isInvalid") "error")
      data-test-i-i-s-test22-ном-e-контр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "контр" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.контр.контраг
      class=(if (v-get validationModel.контр "контраг" "isInvalid") "error")
      label=(t "forms.i-i-s-test22-ном-e.контр.контраг-caption")
      data-test-i-i-s-test22-ном-e-контр-контраг=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.контр "контраг" "message")}}
  </div>
</form>
